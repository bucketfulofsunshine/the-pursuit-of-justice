/* messenger approaches and starts the dialogue */
IF
  Global("bfhelmitemessenger","GLOBAL",2)
  See([PC])
THEN
  RESPONSE #100
    SetGlobal("bfhelmitemessenger","GLOBAL",3)
    MoveToObject([PC])
    StartDialogueNoSet(Player1)
END

IF
  Global("bfhelmitemessenger","GLOBAL",4)
THEN
  RESPONSE #100
    SetGlobal("bfhelmitemessenger","GLOBAL",5)
    EscapeArea()
END
